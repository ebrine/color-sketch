<div class="container">
  <h1><%= @entry.title %></h1>
  <p>
    <%= @entry.body %>
  </p>
    <% @entry.tags.each do |tag| %>
    <p>  Tags: <%= tag.name  %> </p>
    <% end%>
    <form action="/entries/delete/<%=@entry.id%>" method="post">
    <input type="submit" name="delete" value="Delete"/>
  </form>
</div>
