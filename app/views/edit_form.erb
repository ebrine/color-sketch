<div class="container">

  <form id="entry-form" action="/update?entry_id=<%=@entry_id%>" method="post" >
    <label>Title:</label>
    <input type="text" name="title" value="<%=@entry_title%>"/><br/>
  </br/>
    <label>Author:</label>
    <input type="text" name="author" value="<%=@entry_author%>"/><br/>
  </br/>
    <label>Tags</label><br />
    <%@entry_tag_names.each do |name| %>
    <label><%=name %></label>
    <input type="checkbox" name="<%=name %>" checked /><br />
    <% end %><br />


    <%@other_tags.each do |name| %>
    <label><%=name %></label>
    <input type="checkbox" name="<%=name %>" /><br />
    <% end %><br />
    <label>Other:</label>
    <input type="text" name="other_tag_entry" /><br />
    <label>Body:</label>
    <input type="textarea" name="body" value="<%=@entry_body%>"/><br/>
  </br/>
    <input type="submit" value="Publish Changes" />
  </form><!-- end entry form -->

</div><!-- end container -->
