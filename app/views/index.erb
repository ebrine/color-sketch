
<div class="container">
  <h1>SpaceFeld!</h1>
  <div class="header-break"></div>

  <div class="main">
  <% if defined?(@article) && @article != nil %>
  <h2><%= @article.title %></h2>
  <p class="single-article"><%= @article.article %></p>
  <div class="nav-container">
    <a class="press" href="/<%= @current_id %>/delete_entry">Delete This Entry</a>
    <a class="press" href="/<%= @current_id %>/edit_entry">Edit This Entry</a>
    <a class="press" href="/">Take Me Home!</a>
  </div>

  <% else %>
    <% @posts.each do |post| %>
    <h2><a href="/<%= post.id %>"> <%= post.title %></a></h2>
    <p class="index-article"><%= post.article[0..200] + "..."%><a class="read-on" href="/<%= post.id %>"> Read On</a></p>
    <p class="tags">tags: <%= post.tags.pluck(:tag).join(", ") %><p>
    <% end %>
    <a class="press main-article-add-button" href="/new_entry/">Add New Entry</a>
  <% end %>

  </div>
</div>
