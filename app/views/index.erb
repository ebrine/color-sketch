<div class="container">
  <h1>SpaceFeld!</h1>

  <% if defined?(@article) && @article != nil %>
  <h2><%= @article.title %></h2>
  <p><%= @article.article %></p>
    <a href="/<%= @current_id %>/delete_entry">Delete This Entry</a>
    <a href="/<%= @current_id %>/edit_entry">Edit This Entry</a>
    <a href="/">Take Me Home!</a>
  <% else %>
    <% @posts.each do |post| %>
    <h2><a href="/<%= post.id %>"> <%= post.title %></a></h2>
    <p><%= post.article %></p>
    <% end %>
  <% end %>

  <a href="/new_entry">Add New Entry</a>
</div>
