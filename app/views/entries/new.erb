<div class="container">
  <h1>Create new entry!</h1>

  <form action="/entries" method="post">
    <p>Title</p>
    <input type="text" name="title">
    <p>Body</p>
    <input type="text" name="body">
    <p>Tags (dogs, cats, ham...)</p>
    <input type="text" name="tags">
    <input type="submit">
  </form>

  <% if @errors %>
    <% @errors.each do |error| %>
      <p class="error"> <%= error %> </p>
    <% end %>
  <% end %>

</div>
