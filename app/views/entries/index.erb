<section class="container">
  <h1>Your new Blog</h1>
  <aside>
    <ul>
      <% @entries.each do |entry| %>
      <li>
        <a href="/entries/<%= entry.id %>"><%= entry.name %></a>
          <span>|</span>
        <a href="/entries/<%= entry.id %>/edit">Edit</a>
          <span>|</span>
        <form id="delete-form" action="/entries/<%= entry.id %>/delete" method="post">
          <input type="hidden" name="_method" value="delete" />
          <input type="submit" name="_method" value="Delete"  />
        </form>
      </li>
      <% end %>
    </ul>
    <span><a id="new-entry-button" href="/entries/new">New Entry</a></span>
  </aside>
</section>
